@page "/{id:int?}""@model Chis_Denisa_Proiect1.Pages.Programari.IndexModel@{    ViewData["Title"] = "PROGRAMARI";}<h1>Programari Lovely Pet </h1><p>    <a asp-page="Create">Create New</a></p><table class="table">    <thead>        <tr>            <th>                @Html.DisplayNameFor(model => model.Programare[0].Animal)            </th>            <th>                @Html.DisplayNameFor(model => model.Programare[0].Contact)            </th>            <th>                @Html.DisplayNameFor(model => model.Programare[0].Pret)            </th>            <th>                @Html.DisplayNameFor(model => model.Programare[0].Data)            </th>            <th>                @Html.DisplayNameFor(model => model.Programare[0].Doctor.NumeDoctor)            </th>            <th>                @Html.DisplayNameFor(model => model.Programare[0].ProgramareServicii)            </th>            <th></th>        </tr>    </thead>    <tbody>        @foreach (var item in Model.ProgramareD.Programari)        {
            string selectedRow = "";
            if (item.ID == Model.ID)
            {
                selectedRow = "table-success";
            }        <tr class="@selectedRow">            <td>                @Html.DisplayFor(modelItem => item.Animal)            </td>            <td>                @Html.DisplayFor(modelItem => item.Contact)            </td>            <td>                @Html.DisplayFor(modelItem => item.Pret)            </td>            <td>                @Html.DisplayFor(modelItem => item.Data)            </td>            <td>                @Html.DisplayFor(modelItem => item.Doctor.NumeDoctor)            </td>            <td>                @{                    foreach (var serviciu in item.ProgramareServicii)                    {                        @serviciu.Serviciu.ID @: @serviciu.Serviciu.NumeServiciu <br />                    }                }            </td>            <td>                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>            </td>        </tr>        }    </tbody></table>