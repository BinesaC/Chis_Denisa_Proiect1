@page
@model Chis_Denisa_Proiect1.Pages.Programari.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Programare</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Programare.Animal" class="control-label"></label>
                <input asp-for="Programare.Animal" class="form-control" />
                <span asp-validation-for="Programare.Animal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programare.Contact" class="control-label"></label>
                <input asp-for="Programare.Contact" class="form-control" />
                <span asp-validation-for="Programare.Contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programare.Pret" class="control-label"></label>
                <input asp-for="Programare.Pret" class="form-control" />
                <span asp-validation-for="Programare.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programare.Data" class="control-label"></label>
                <input asp-for="Programare.Data" class="form-control" />
                <span asp-validation-for="Programare.Data" class="textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programare.DoctorID" class="control-label">Publisher Name</label>
                <select asp-for="Programare.DoctorID" class="form-control" asp-items="ViewBag.DoctorID">
                </select>
                <span asp-validation-for="Programare.DoctorID" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <div class="table">
                        <table>
                            <tr>
                                @{
                                    int cnt = 0;
                                    foreach (var cat in Model.ListaServiciuAlocat)
                                    {
                                        if (cnt++ % 3 == 0)
                                        {
                                        @:</tr><tr>
                                        }
                                        @:<td>
                                            <input type="checkbox"
                                                   name="selectedServicii"
                                                   value="@cat.ServiciuID"
                                                   @(Html.Raw(cat.Alocare ? "checked=\"checked\"" : "")) />
                                            @cat.ServiciuID @: @cat.Nume
                                        @:</td>
                                    }
                                @:</tr>
                                }
                            </table>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>


            </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
